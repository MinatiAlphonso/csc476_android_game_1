<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:id="@+id/grid_laser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grid_laser_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/radial_laser_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onRectClick"/>

    <Button
        android:id="@+id/radial_laser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radial_laser_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linear_laser_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/grid_laser_button"
        app:layout_constraintTop_toTopOf="parent"

        android:onClick="onCircleClick"/>

    <Button
        android:id="@+id/linear_laser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/linear_laser_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/radial_laser_button"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onLineClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>